class Man {
         public $name = "homosapean";
         public $breed = "human";
         public $gender = "male";
         public $price = "0";
}
 
     function_construct($name,$breed,$gender,$price){

      $this->name = $name;
      $this->breed = $breed;
      $this->gender = $gender;
      $this->price = $price;
}
    function getName(){
      return "this is my" . $this->name.
      "and last" . $this->breed . 
      "and this is my gender" . $this->gender . ".";
    }

  
